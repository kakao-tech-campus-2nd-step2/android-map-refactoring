<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.fragments.KakaoMapFragment">

    <com.kakao.vectormap.MapView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/kakao_map_view"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/error_message_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="text_error, retry_button"
        />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/text_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="error!"
        android:gravity="center"
        android:textSize="18dp"
        />

    <ImageButton
        android:id="@+id/retry_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@id/text_error"
        app:layout_constraintLeft_toLeftOf="@id/text_error"
        app:layout_constraintRight_toRightOf="@id/text_error"
        android:layout_marginTop="25dp"
        android:src="@drawable/spin"
        app:tint="#333333"
        android:background="#00000000"
        />




</androidx.constraintlayout.widget.ConstraintLayout>