<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ErrorActivity">

    <Space
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/korean_error_msg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <TextView
        android:id="@+id/korean_error_msg"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="지도를 불러오지 못했습니다. \n다시 시도해주세요."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/english_error_msg"
        android:layout_marginBottom="1dp"/>

    <TextView
        android:id="@+id/english_error_msg"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:hint="MapAuthException"
        app:layout_constraintTop_toBottomOf="@+id/korean_error_msg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>