<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewHolder"
            type="ksc.campus.tech.kakao.map.presentation.views.adapters.SearchResultAdapter.SearchResultViewHolder" />

        <variable
            name="searchResult"
            type="ksc.campus.tech.kakao.map.domain.models.SearchResult" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:onClick="@{()->viewHolder.clickItem()}">

        <TextView
            android:id="@+id/icon_map_pin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:foreground="@drawable/map_pin"
            android:foregroundTint="#50C785"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_result_name"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:text="@{searchResult.name}"
            android:textSize="24dp"
            app:layout_constraintLeft_toRightOf="@id/icon_map_pin"
            app:layout_constraintRight_toLeftOf="@id/text_result_type"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_result_address"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="@{searchResult.address}"
            android:textColor="#aa000000"
            android:textSize="16dp"
            app:layout_constraintLeft_toRightOf="@id/icon_map_pin"
            app:layout_constraintRight_toLeftOf="@id/text_result_type"
            app:layout_constraintTop_toBottomOf="@id/text_result_name" />

        <TextView
            android:id="@+id/text_result_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:gravity="end"
            android:text="@{searchResult.type}"
            android:textColor="#aa000000"
            android:textSize="18dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>