<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="campus.tech.kakao.map.SearchViewModel" />
        <variable
            name="activity"
            type="campus.tech.kakao.map.SearchActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchActivity">

        <EditText
            android:id="@+id/search"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="@string/QUERY_HINT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onTextChanged="@{(text, start, before, count) -> viewModel.getSearchResult(text.toString())}"
            />

        <ImageView
            android:id="@+id/xmark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/search"
            app:layout_constraintBottom_toBottomOf="@id/search"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/xmark"
            android:onClick="@{() -> search.setText(``)}"
            />

        <TextView
            android:id="@+id/emptyMainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/EMPTY_TEXT"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="@{viewModel.emptyMainTextVisibility ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/placeResult"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/searchHistory"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/place_item"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/search"
            app:layout_constraintBottom_toTopOf="@+id/placeResult"
            tools:listitem="@layout/search_history_item"
            app:layout_constraintStart_toStartOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
