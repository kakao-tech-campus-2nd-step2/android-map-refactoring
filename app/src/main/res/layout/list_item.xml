<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/list_item_padding">

    <ImageView
        android:id="@+id/iv_location_icon"
        android:layout_width="@dimen/location_icon_width"
        android:layout_height="@dimen/location_icon_height"
        android:layout_alignParentStart="true"
        android:src="@drawable/mint_marker" />

    <TextView
        android:id="@+id/tv_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_item_margin"
        android:layout_toEndOf="@id/iv_location_icon"
        android:textSize="@dimen/text_size_medium"
        tools:text="place name" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_place_name"
        android:layout_marginStart="@dimen/list_item_margin"
        android:layout_toEndOf="@id/iv_location_icon"
        android:textColor="#808080"
        android:textSize="@dimen/text_size_small"
        tools:text="address" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="#808080"
        android:textSize="@dimen/text_size_small"
        tools:text="category" />

</RelativeLayout>
