<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="campus.tech.kakao.map.presenter.viewModel.MapViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presenter.view.MapActivity">


        <TextView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/et_search_hint"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:elevation="10dp"
            android:background="@drawable/map_search_bar_bg"
            android:drawableRight="@drawable/delete_btn_bg"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"/>

        <com.kakao.vectormap.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">
        </com.kakao.vectormap.MapView>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                android:id="@+id/bottomSheet"
                visibleGone="@{viewModel.currentPlace != null}"
                layout="@layout/map_view_bottom_sheet"
                app:viewModel="@{viewModel}"
                android:elevation="10dp"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>