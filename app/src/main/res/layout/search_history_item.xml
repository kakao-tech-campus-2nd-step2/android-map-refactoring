<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="searchHistory"
            type="campus.tech.kakao.map.SearchHistory" />
        <variable
            name="position"
            type="Integer" />
        <variable
            name="clickListener"
            type="campus.tech.kakao.map.HistoryAdapter.OnItemClickListener" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/search_history_background"
        android:onClick="@{() -> clickListener.onItemClick(position)}">

        <TextView
            android:id="@+id/history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{searchHistory.searchHistory}"
            android:textSize="17sp"
            android:layout_marginRight="10dp" />

        <ImageView
            android:id="@+id/xmark"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/xmark"
            android:onClick="@{() -> clickListener.onXMarkClick(position)}" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
